<LinearLayout

xmlns:android="http://schemas.android.com/apk/res/android"

xmlns:app="http://schemas.android.com/apk/res-auto"

xmlns:tools="http://schemas.android.com/tools"

android:layout_width="match_parent"

android:layout_height="match_parent"

android:orientation="vertical"

android:gravity="center"

tools:context=".GameActivity">

<TextView

android:id="@+id/orderTextView"

android:layout_width="wrap_content"

android:layout_height="wrap_content"

android:text="FAÇA SUA PIZZA"

android:layout_marginBottom="16dp"

android:textSize="18sp"

android:textStyle="bold" />

<ImageView

android:id="@+id/pizzaImageView"

android:layout_width="200dp"

android:layout_height="200dp"

android:layout_centerHorizontal="true"

android:layout_marginBottom="16dp"

android:src="@drawable/pizza_base" />

<GridLayout

android:layout_width="wrap_content"

android:layout_height="wrap_content"

android:layout_marginTop="16dp"

android:columnCount="2"

android:rowCount="2"

android:layout_gravity="center">

<Button

android:id="@+id/addKetchupButton"

android:layout_width="wrap_content"

android:layout_height="wrap_content"

android:layout_margin="8dp"

android:backgroundTint="#FF1908"

android:text="Add Ketchup" />

<Button

android:id="@+id/addCamButton"

android:layout_width="wrap_content"

android:layout_height="wrap_content"

android:layout_margin="8dp"

android:backgroundTint="#FF5722"

android:text="Add Camarões" />

<Button

android:id="@+id/addPimenButton"

android:layout_width="wrap_content"

android:layout_height="wrap_content"

android:layout_margin="8dp"

android:backgroundTint="#4CAF50"

android:text="Add Pimentão" />

<Button

android:id="@+id/addPepiButton"

android:layout_width="wrap_content"

android:layout_height="wrap_content"

android:layout_margin="8dp"

android:backgroundTint="#8BC34A"

android:text="Add Pepino" />

</GridLayout>

<Button

android:id="@+id/submitPizzaButton"

android:layout_width="wrap_content"

android:layout_height="wrap_content"

android:layout_marginTop="24dp"

android:text="Submit Pizza"

android:backgroundTint="#FFC107" />

</LinearLayout>
